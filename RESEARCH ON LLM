    <script>
        document.addEventListener('DOMContentLoaded', function () {
            
            const vibrantPalette = {
                blue: '#0D6EFD',
                green: '#198754',
                yellow: '#FFC107',
                red: '#DC3545',
                teal: '#20C997',
                gray: '#6C757D',
                lightGray: '#E9ECEF',
                darkGray: '#343A40',
            };
            
            const wrapLabel = (label, maxLength = 16) => {
                if (label.length <= maxLength) {
                    return label;
                }
                const words = label.split(' ');
                let lines = [];
                let currentLine = '';
                for (const word of words) {
                    if ((currentLine + ' ' + word).trim().length > maxLength && currentLine.length > 0) {
                        lines.push(currentLine);
                        currentLine = word;
                    } else {
                        currentLine = (currentLine + ' ' + word).trim();
                    }
                }
                if (currentLine.length > 0) {
                    lines.push(currentLine);
                }
                return lines;
            };
            
            const tooltipTitleCallback = (tooltipItems) => {
                const item = tooltipItems[0];
                let label = item.chart.data.labels[item.dataIndex];
                if (Array.isArray(label)) {
                  return label.join(' ');
                } else {
                  return label;
                }
            };

            const defaultChartOptions = {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        labels: {
                            color: vibrantPalette.darkGray,
                            font: {
                                family: "'Inter', sans-serif"
                            }
                        }
                    },
                    tooltip: {
                        callbacks: {
                            title: tooltipTitleCallback,
                        },
                        backgroundColor: vibrantPalette.darkGray,
                        titleFont: {
                            family: "'Inter', sans-serif",
                            size: 14,
                            weight: 'bold'
                        },
                        bodyFont: {
                            family: "'Inter', sans-serif",
                            size: 12
                        }
                    }
                },
                scales: {
                    x: {
                        ticks: { 
                            color: vibrantPalette.gray,
                            font: { family: "'Inter', sans-serif" }
                        },
                        grid: {
                            display: false
                        }
                    },
                    y: {
                        ticks: {
                            color: vibrantPalette.gray,
                            font: { family: "'Inter', sans-serif" }
                        },
                         grid: {
                            color: '#dee2e6'
                        }
                    }
                }
            };

            const modelComparisonCtx = document.getElementById('modelComparisonChart');
            if(modelComparisonCtx) {
                new Chart(modelComparisonCtx, {
                    type: 'radar',
                    data: {
                        labels: ['Reasoning', 'Speed', 'Multimodality', 'Safety', 'Customizability'],
                        datasets: [{
                            label: 'GPT-4o',
                            data: [9, 8, 8, 7, 3],
                            borderColor: vibrantPalette.blue,
                            backgroundColor: 'rgba(13, 110, 253, 0.2)',
                            pointBackgroundColor: vibrantPalette.blue,
                        }, {
                            label: 'Gemini 1.5 Pro',
                            data: [8, 9, 9, 7, 4],
                            borderColor: vibrantPalette.green,
                            backgroundColor: 'rgba(25, 135, 84, 0.2)',
                            pointBackgroundColor: vibrantPalette.green,
                        }, {
                            label: 'Llama 3',
                            data: [7, 8, 3, 6, 10],
                            borderColor: vibrantPalette.red,
                            backgroundColor: 'rgba(220, 53, 69, 0.2)',
                            pointBackgroundColor: vibrantPalette.red,
                        }, {
                            label: 'Claude 3.5',
                            data: [8, 8, 7, 9, 3],
                            borderColor: vibrantPalette.yellow,
                            backgroundColor: 'rgba(255, 193, 7, 0.2)',
                            pointBackgroundColor: vibrantPalette.yellow,
                        }]
                    },
                    options: {
                        ...defaultChartOptions,
                        scales: {
                            r: {
                                angleLines: {
                                    color: '#dee2e6'
                                },
                                grid: {
                                    color: '#dee2e6'
                                },
                                pointLabels: {
                                    color: vibrantPalette.darkGray,
                                    font: {
                                        size: 12,
                                        family: "'Inter', sans-serif",
                                        weight: 600
                                    }
                                },
                                ticks: {
                                    backdropColor: 'transparent',
                                    color: vibrantPalette.gray
                                }
                            }
                        }
                    }
                });
            }

            const ecosystemSplitCtx = document.getElementById('ecosystemSplitChart');
            if(ecosystemSplitCtx) {
                new Chart(ecosystemSplitCtx, {
                    type: 'doughnut',
                    data: {
                        labels: ['Proprietary API (OpenAI, Google, Anthropic)', 'Open Source (Meta, etc.)'],
                        datasets: [{
                            data: [65, 35],
                            backgroundColor: [vibrantPalette.blue, vibrantPalette.green],
                            borderColor: '#F8F9FA',
                            borderWidth: 4
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                         plugins: {
                            legend: { position: 'bottom', labels: { color: vibrantPalette.darkGray, font: { family: "'Inter', sans-serif" }}},
                            tooltip: {
                                callbacks: { title: tooltipTitleCallback },
                                backgroundColor: vibrantPalette.darkGray
                            }
                        }
                    }
                });
            }

            const securityRisksCtx = document.getElementById('securityRisksChart');
            if(securityRisksCtx) {
                const securityLabels = [
                    wrapLabel('LLM01: Prompt Injection'),
                    wrapLabel('LLM02: Insecure Output Handling'),
                    wrapLabel('LLM03: Training Data Poisoning'),
                    wrapLabel('LLM04: DoS Attack'),
                    wrapLabel('LLM05: Supply Chain Vulnerabilities'),
                    wrapLabel('LLM06: Sensitive Information Disclosure')
                ];
                new Chart(securityRisksCtx, {
                    type: 'bar',
                    data: {
                        labels: securityLabels,
                        datasets: [{
                            label: 'Perceived Risk Score',
                            data: [9.5, 8.0, 8.5, 7.0, 7.5, 9.0],
                            backgroundColor: [vibrantPalette.red, vibrantPalette.yellow, vibrantPalette.blue, vibrantPalette.gray, vibrantPalette.teal, vibrantPalette.green],
                        }]
                    },
                    options: {
                       ...defaultChartOptions,
                       indexAxis: 'y',
                       scales: {
                            x: { max: 10 },
                            y: { grid: { display: false } }
                       },
                       plugins: {
                            legend: { display: false },
                            tooltip: { callbacks: { title: tooltipTitleCallback }, backgroundColor: vibrantPalette.darkGray }
                       }
                    }
                });
            }

            const multimodalityCtx = document.getElementById('multimodalityChart');
            if(multimodalityCtx) {
                new Chart(multimodalityCtx, {
                    type: 'line',
                    data: {
                        labels: ['2020', '2021', '2022', '2023', '2024', '2025 (Proj.)'],
                        datasets: [{
                            label: 'Text-Only Models',
                            data: [95, 90, 80, 60, 40, 20],
                            borderColor: vibrantPalette.gray,
                            tension: 0.3,
                            fill: false
                        }, {
                            label: 'Multimodal Models',
                            data: [5, 10, 20, 40, 60, 80],
                            borderColor: vibrantPalette.blue,
                            backgroundColor: 'rgba(13, 110, 253, 0.2)',
                            tension: 0.3,
                            fill: true
                        }]
                    },
                    options: {
                        ...defaultChartOptions,
                        plugins: {
                            ...defaultChartOptions.plugins,
                            title: { display: true, text: 'Model Capabilities by Modality (%)', color: vibrantPalette.darkGray, font: { size: 14 } }
                        }
                    }
                });
            }

            const efficiencyCtx = document.getElementById('efficiencyChart');
            if(efficiencyCtx) {
                 new Chart(efficiencyCtx, {
                    type: 'line',
                    data: {
                        labels: ['2021', '2022', '2023', '2024', '2025 (Proj.)'],
                        datasets: [{
                            label: 'Focus on Frontier Scale',
                            data: [80, 85, 90, 70, 60],
                            borderColor: vibrantPalette.red,
                            tension: 0.3,
                            fill: false
                        }, {
                            label: 'Focus on Efficiency & Small Models',
                            data: [20, 15, 10, 30, 40],
                            borderColor: vibrantPalette.green,
                            tension: 0.3,
                            fill: true,
                            backgroundColor: 'rgba(25, 135, 84, 0.2)'
                        }]
                    },
                     options: {
                        ...defaultChartOptions,
                        plugins: {
                            ...defaultChartOptions.plugins,
                            title: { display: true, text: 'Research Focus: Scale vs. Efficiency (%)', color: vibrantPalette.darkGray, font: { size: 14 } }
                        }
                    }
                });
            }
        });
    </script>
</body>

